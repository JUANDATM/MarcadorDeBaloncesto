<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/ConstraintLayout" android:clickable="false">
    <EditText
            android:layout_width="175dp"
            android:layout_height="62dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/etB"
            app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp" android:text="0"
            android:textAlignment="center" android:editable="false" android:enabled="false"/>
    <EditText
            android:layout_width="175dp"
            android:layout_height="62dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/etA"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp" android:hint="0" android:text="0"
            android:textAlignment="center" android:editable="false" android:enabled="false"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/guideline3"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.5"/>
    <Button
            android:text="+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn1A" android:textSize="18sp"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/etA"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:onClick="A1"/>
    <Button
            android:text="+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn1B" android:textSize="18sp"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/etB"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="B1"/>
    <Button
            android:text="+2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn2A" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn1A" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="36dp"
            android:onClick="A2"/>
    <Button
            android:text="+3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn3A" android:textSize="18sp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/btn2A"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:onClick="A3"/>
    <Button
            android:text="+2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn2B" android:textSize="18sp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/btn1B"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="B2"/>
    <Button
            android:text="+3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn3B" android:textSize="18sp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/btn2B"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="B3"/>
    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnReset"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:onClick="Reset"
            app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>